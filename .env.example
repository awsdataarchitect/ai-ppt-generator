# AI PPT Generator - AWS Native RAG Configuration
# Single consolidated environment file for all components

# ===== AWS CONFIGURATION =====
AWS_REGION=us-east-1
AWS_PROFILE=default

# ===== BEDROCK KNOWLEDGE BASE CONFIGURATION =====
# Amazon Bedrock Nova Pro Model
BEDROCK_MODEL_ID=amazon.nova-pro-v1:0
BEDROCK_MODEL_ARN=arn:aws:bedrock:us-east-1::foundation-model/amazon.nova-pro-v1:0
EMBEDDING_MODEL_ARN=arn:aws:bedrock:us-east-1::foundation-model/amazon.titan-embed-text-v2:0

# Knowledge Base (populated after CDK deployment)
KNOWLEDGE_BASE_ID=
DATA_SOURCE_ID=
DOCUMENTS_BUCKET=ai-ppt-documents-{account}-{region}
DOCUMENTS_TABLE_NAME=ai-ppt-documents
VECTOR_BUCKET_NAME=ai-ppt-vectors-{account}-{region}

# ===== DYNAMODB TABLES =====
PRESENTATIONS_TABLE_NAME=ai-ppt-presentations
ASSETS_TABLE_NAME=ai-ppt-assets

# ===== S3 BUCKETS =====
ASSETS_BUCKET=ai-ppt-assets-{account}-{region}

# ===== COGNITO AUTHENTICATION =====
# Populated after CDK deployment
USER_POOL_ID=us-east-1_xxxxxxxxx
USER_POOL_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx
IDENTITY_POOL_ID=us-east-1:xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# ===== APPSYNC GRAPHQL =====
# Populated after CDK deployment
GRAPHQL_ENDPOINT=https://xxxxxxxxxxxxxxxxxxxxxxxxxx.appsync-api.us-east-1.amazonaws.com/graphql
GRAPHQL_API_KEY=da2-xxxxxxxxxxxxxxxxxxxxxxxxxx

# ===== FRONTEND CONFIGURATION =====
FRONTEND_URL=https://app.aipptgenerator.com
NODE_ENV=production

# Next.js Public Environment Variables
NEXT_PUBLIC_AWS_REGION=us-east-1
NEXT_PUBLIC_USER_POOL_ID=us-east-1_xxxxxxxxx
NEXT_PUBLIC_USER_POOL_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx
NEXT_PUBLIC_GRAPHQL_ENDPOINT=https://xxxxxxxxxxxxxxxxxxxxxxxxxx.appsync-api.us-east-1.amazonaws.com/graphql
NEXT_PUBLIC_GRAPHQL_API_KEY=da2-xxxxxxxxxxxxxxxxxxxxxxxxxx
NEXT_PUBLIC_ASSETS_BUCKET=ai-ppt-assets-{account}-{region}

# ===== DEPLOYMENT CONFIGURATION =====
# CDK Stack Name
STACK_NAME=ai-ppt-complete-stack

# Environment
ENVIRONMENT=production

# ===== OPERATIONAL CONFIGURATION =====
# Timeout settings (seconds)
LAMBDA_TIMEOUT=900
DOCUMENT_PROCESSING_TIMEOUT=840
TEXTRACT_TIMEOUT=300
S3_TIMEOUT=60
KNOWLEDGE_BASE_TIMEOUT=300

# Performance settings
MAX_CONCURRENT_UPLOADS=5
CHUNK_SIZE=1000
MAX_FILE_SIZE=10485760

# Monitoring
LOG_LEVEL=INFO
ENABLE_XRAY_TRACING=true
ENABLE_DETAILED_MONITORING=true

# ===== SECURITY CONFIGURATION =====
# CORS settings
ALLOWED_ORIGINS=https://app.aipptgenerator.com
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=Content-Type,Authorization,X-Amz-Date,X-Api-Key,X-Amz-Security-Token

# Rate limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# ===== DEVELOPMENT OVERRIDES =====
# Uncomment for local development
# AWS_ENDPOINT_URL_DYNAMODB=http://localhost:8000
# AWS_ENDPOINT_URL_S3=http://localhost:9000
# DISABLE_SSL_VERIFICATION=true
