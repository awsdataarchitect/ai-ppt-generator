{
  "name": "ai-ppt-infrastructure",
  "version": "1.0.0",
  "description": "AWS CDK infrastructure for AI PPT Generator",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "deploy": "cdk deploy --all --require-approval never",
    "deploy:dev": "cdk deploy --all --require-approval never --context environment=dev",
    "deploy:prod": "cdk deploy --all --require-approval never --context environment=prod",
    "destroy": "cdk destroy --all",
    "diff": "cdk diff",
    "synth": "cdk synth",
    "bootstrap": "cdk bootstrap"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^20.19.10",
    "aws-cdk": "^2.1025.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "~5.2.2"
  },
  "dependencies": {
    "aws-cdk-lib": "^2.211.0",
    "constructs": "^10.0.0",
    "source-map-support": "^0.5.21"
  }
}
